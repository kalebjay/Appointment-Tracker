<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view_controller.CustomerController">
   <children>
      <Label layoutX="20.0" layoutY="5.0" prefHeight="30.0" prefWidth="85.0" text="Customers">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TableView fx:id="customerTableView" layoutX="10.0" layoutY="40.0" prefHeight="400.0" prefWidth="780.0">
        <columns>
            <TableColumn fx:id="Name" prefWidth="110.0" text="Name" />
            <TableColumn fx:id="Phone" prefWidth="110.0" text="Phone" />
            <TableColumn fx:id="Address1" prefWidth="120.0" text="Address 1" />
            <TableColumn fx:id="Address2" prefWidth="120.0" text="Addres 2" />
            <TableColumn fx:id="City" prefWidth="120.0" text="City" />
            <TableColumn fx:id="Country" prefWidth="100.0" text="Country" />
            <TableColumn fx:id="PostalCode" prefWidth="100.0" text="Postal Code" />
        </columns>
      </TableView>
      <Button fx:id="createNewCustomerBTN" layoutX="250.0" layoutY="455.0" mnemonicParsing="false" onAction="#goToManageCustomerNEW" prefHeight="30.0" prefWidth="100.0" text="Create New">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="updateCustomerBTN" layoutX="360.0" layoutY="455.0" mnemonicParsing="false" onAction="#goToManageCustomerMODIFY" prefHeight="30.0" prefWidth="70.0" text="Update">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="deleteCustomerBTN" layoutX="445.0" layoutY="455.0" mnemonicParsing="false" onAction="#deleteCustomer" prefHeight="30.0" prefWidth="70.0" text="Delete">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="mainMenuBTN" layoutX="660.0" layoutY="455.0" mnemonicParsing="false" onAction="#goToMainMenuView" prefHeight="30.0" prefWidth="100.0" text="Main Menu">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label layoutX="50.0" layoutY="455.0" prefHeight="30.0" prefWidth="160.0" text="Manage Customers">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
