<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view_controller.ManageAppointmentController">
   <children>
      <Label layoutX="110.0" layoutY="35.0" text="Manage Appointments">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <ComboBox fx:id="customerComboBox" layoutX="120.0" layoutY="100.0" prefHeight="25.0" prefWidth="155.0" promptText="Customer" />
      <ComboBox fx:id="appointmentTypeComboBox" layoutX="120.0" layoutY="145.0" prefHeight="25.0" prefWidth="155.0" promptText="Type of Appointment" />
      <ComboBox fx:id="startTimeComboBox" layoutX="125.0" layoutY="260.0" prefWidth="150.0" promptText="Start Time" />
      <ComboBox fx:id="endTimeComboBox" layoutX="125.0" layoutY="300.0" prefWidth="150.0" promptText="End Time" />
      <DatePicker fx:id="datePicker" layoutX="125.0" layoutY="210.0" />
      <Label layoutX="40.0" layoutY="210.0" text="Select a Date">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="saveBTN" layoutX="110.0" layoutY="345.0" mnemonicParsing="false" onAction="#saveAppointmentData" prefHeight="40.0" prefWidth="70.0" text="Save">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="cancelBTN" layoutX="220.0" layoutY="345.0" mnemonicParsing="false" onAction="#goToCalendarView" prefHeight="40.0" prefWidth="70.0" text="Cancel">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
